<div class= "container">
  <header align= "center" class= "header-wrap">
    <h2 class= "text-black">Foodie Account Information
    </h2>
     <div class= "userId">
     </div>
         <h4 id= "update-err-msg">
         </h4>
  </header>

  <form id="user-form">
    <div class="form-row">
      <div class="form-group col-md-8">
        <label class="text-black"
        for="inputFirstName">First name
        </label>
        <input type="text" 
        class="form-control" 
        id="inputFirstName" 
        value="{{userInfo.firstName}}" 
        placeholder="First name">
      </div>
      <div class="form-group col-md-8">
        <label class="text-black" 
        for="inputLastName">Last name
        </label>
        <input type="text" 
        class="form-control" 
        id="inputLastName" 
        value="{{userInfo.lastName}}" 
        placeholder="Last name">
      </div>
    </div>


    <div class="form-row">
      <div class="form-group col-md-8">
        <label class="text-black" for="inputPassword">E-mail</label>
        <input type="text" 
        class="form-control" 
        id="inputEmail" 
        value="{{userInfo.email}}">
      </div>
      <div class="form-group col-md-6">
        <label class="text-black" for="inputPassword">Password</label>
        <input type="password" 
        class="form-control" 
        id="inputPassword" 
        value="{{userInfo.password}}">
      </div>
    </div>